<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Add a New Water Change</h1>
        <div style="width: 30%; margin: 30px auto;">
            <form action="/aquariums/<%= aquarium._id %>/water-changes" method="POST">
                <div class="form-group">
                    <span>Date:</span>
                    <input class="form-control" type="date" name="waterChange[date]" required></input>
                </div>
                <div class="form-group">
                    <span>Gallons of Water Changed:
                    <input class="form-control" type="number" min="1" placeholder="Gallons Changed" name="waterChange[amount]" required></input>
                    </span>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-block btn-primary">Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>

<% include ../partials/footer %>