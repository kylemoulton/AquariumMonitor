<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h2 style="text-align: center;">Edit Water Change</h1>
        <div style="width: 30%; margin: 30px auto;">
            <form action="/aquariums/<%= aquarium_id %>/water-changes/<%= waterChange._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <span>Date:</span>
                    <input class="form-control" type="date" name="waterChange[date]" value="<%= date %>"></input>
                </div>
                <div class="form-group">
                    <span>
                        Gallons of Water Changed
                        <input class="form-control" type="number" min="1" name="waterChange[amount]" value="<%= waterChange.amount %>"></input>
                    </span>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-block btn-primary">Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>    


<!-- If no water changes, display on page -->
<% include ../partials/footer %>