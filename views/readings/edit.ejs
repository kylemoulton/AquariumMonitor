<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h2 style="text-align: center;">Edit Test Strip Reading for <%= reading.aquarium.name %> <%= displayDate %></h1>
        <div style="width: 30%; margin: 30px auto;">
            <form action="/aquariums/<%= aquarium_id %>/readings/<%= reading._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <span>Date:</span>
                    <input class="form-control" type="date" name="reading[date]" value="<%= date %>" required></input>
                </div>
                <div class="form-group">
                    <span>Ammonia (0 - 6 ppm):</span>
                    <input class="form-control" type="text" name="reading[ammonia]" value="<%= reading.ammonia %>"></input>
                </div>                
                <div class="form-group">
                    <span>Nitrite (0 - 10 ppm)</span>
                    <input class="form-control" type="text" name="reading[nitrite]" value="<%= reading.nitrite %>"></input>
                </div>                
                <div class="form-group">
                    <span>Nitrate (0 - 200 ppm):</span>
                    <input class="form-control" type="text" name="reading[nitrate]" value="<%= reading.nitrate %>"></input>
                </div>                
                <div class="form-group">
                    <span>General Hardness (0 - 180 ppm):</span>
                    <input class="form-control" type="text" name="reading[generalHardness]" value="<%= reading.generalHardness %>"></input>
                </div>                
                <div class="form-group">
                    <span>Carbonate Hardness (0 - 240 ppm):</span>
                    <input class="form-control" type="text" name="reading[carbonateHardness]" value="<%= reading.carbonateHardness %>"></input>
                </div>                
                <div class="form-group">
                    <span>pH (6 - 9):</span>
                    <input class="form-control" type="text" name="reading[pH]" value="<%= reading.pH %>"></input>
                </div>                
                <div class="form-group">
                    <button class="btn btn-lg btn-block btn-primary">Submit</button>
                </div>
            </form>
            <a href="/aquariums/<%= aquarium_id %>">Go Back</a>
        </div>
    </div>
</div>

<% include ../partials/footer %>