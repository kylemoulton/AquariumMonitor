<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Add New Measurement for <%= aquarium.name %></h1>
        <div style="width: 30%; margin: 30px auto;">
            <form action="/aquariums/<%= aquarium._id %>/readings" method="POST">
                <div class="form-group">
                    <span>Date:</span>
                    <input class="form-control" type="date" name="reading[date]" required></input>
                </div>
                <div class="form-group">
                    <span>Ammonia (0 - 6 ppm):</span>
                    <input class="form-control" type="text" name="reading[ammonia]"></input>
                </div>                
                <div class="form-group">
                    <span>Nitrite (0 - 10 ppm)</span>
                    <input class="form-control" type="text" name="reading[nitrite]"></input>
                </div>                
                <div class="form-group">
                    <span>Nitrate (0 - 200 ppm):</span>
                    <input class="form-control" type="text" name="reading[nitrate]"></input>
                </div>                
                <div class="form-group">
                    <span>General Hardness (0 - 180 ppm):</span>
                    <input class="form-control" type="text" name="reading[generalHardness]"></input>
                </div>                
                <div class="form-group">
                    <span>Carbonate Hardness (0 - 240 ppm):</span>
                    <input class="form-control" type="text" name="reading[carbonateHardness]"></input>
                </div>                
                <div class="form-group">
                    <span>pH (6 - 9):</span>
                    <input class="form-control" type="text" name="reading[pH]"></input>
                </div>                
                <div class="form-group">
                    <button class="btn btn-lg btn-block btn-primary">Submit</button>
                </div>
            </form>
            <a href="/aquariums/<%= aquarium._id %>">Go Back</a>
        </div>
    </div>
</div>

<% include ../partials/footer %>