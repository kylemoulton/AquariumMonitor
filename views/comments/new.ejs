<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h2 class="text-center">Add New Comment to <%= aquarium.name %></h2>
        <div class="col-md-4 col-md-offset-4">
            <form action="/aquariums/<%= aquarium._id %>/comments" method="POST">
                <div class="form-group">
                    <span>Comment</span>
                    <textarea class="form-control" rows="4" placeholder="Enter Comment" name="comment"></textarea>
                </div>                
                <div class="form-group text-center">
                    <button class="btn btn-md btn-primary" style="width:50%">Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>

<% include ../partials/footer %>