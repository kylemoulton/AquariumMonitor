<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Add New Aquarium</h1>
        <div style="width: 50%; margin: 20px auto;">
            <form action="/aquariums" method="POST">
                <div class="form-group">
                    Tank Name:
                    <input class="form-control" type="text" placeholder="Aquarium Name" name="name"></input>
                </div>                
                <div class="form-group">
                    Image Url:
                    <input class="form-control" type="text" placeholder="image url" name="image"></input>
                </div>                
                <div class="form-group">
                    Type:
                    <input class="form-control" type="text" placeholder="type" name="type"></input>
                </div>                       
                <div class="form-group">
                    Size:
                    <input class="form-control" type="Number" placeholder="size(gal.)" name="size"></input>
                </div>               
                <div class="form-group">
                    Description:
                    <input class="form-control" type="text" placeholder="description" name="description"></input>
                </div>                
                <div class="form-group">
                    <button class="btn btn-lg btn-block btn-primary">Submit!</button>
                </div>
            </form>
        </div>
    </div>
</div>

<% include ../partials/footer %>