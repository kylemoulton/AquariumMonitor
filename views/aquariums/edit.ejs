<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Edit <%= aquarium.name %></h1>
        <div style="width: 50%; margin: 20px auto;">
            <form action="/aquariums/<%= aquarium._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    Tank Name:
                    <input class="form-control" type="text" value="<%= aquarium.name %>" name="name"></input>
                </div>                
                <div class="form-group">
                    Image Url:
                    <input class="form-control" type="text" value="<%= aquarium.image %>" name="image"></input>
                </div>                
                <div class="form-group">
                    Type:
                    <input class="form-control" type="text" value="<%= aquarium.type %>" name="type"></input>
                </div>
                <div class="form-group">
                    Size:
                    <input class="form-control" type="Number" value="<%= aquarium.size %>" name="size"></input>
                </div>               
                <div class="form-group">
                    Description:
                    <input class="form-control" type="text" value="<%= aquarium.description %>" name="description"></input>
                </div>                
                <div class="form-group">
                    <button class="btn btn-lg btn-block btn-primary">Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>

<% include ../partials/footer %>